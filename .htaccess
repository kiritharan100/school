# Disable directory browsing everywhere
Options -Indexes

# Protect PHP files in ajax folder from direct browser access
<IfModule mod_rewrite.c>
RewriteEngine On

# Apply only inside /ajax/ folder
RewriteCond %{REQUEST_URI} ^/ajax/ [NC]
RewriteCond %{REQUEST_FILENAME} \.php$
RewriteCond %{HTTP:X-Requested-With} !^XMLHttpRequest$ [NC]
RewriteRule .* - [F,L]
</IfModule>
